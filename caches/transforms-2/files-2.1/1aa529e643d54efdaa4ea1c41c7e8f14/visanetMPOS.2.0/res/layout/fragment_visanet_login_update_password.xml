<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="match_parent"
    android:background="@color/visanet_dark_transparent">


    <android.support.percent.PercentRelativeLayout
        app:layout_widthPercent="80%"
        app:layout_heightPercent="48%"
        android:layout_centerInParent="true"
        android:background="@color/visanet_white"
        android:orientation="vertical" >

        <TextView
            app:layout_marginLeftPercent="3%"
            android:id="@+id/tvTitle"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            app:layout_heightPercent="20%"
            android:layout_gravity="start|center_vertical"
            android:textSize="@dimen/title_normal_textSize"
            android:text="Cambio de contraseña"
            android:textColor="@color/visanet_blue_titlebar" />

        <EditText
            android:layout_below="@+id/tvTitle"
            android:id="@+id/etPassword1"
            style="@style/styleEditTextVISA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:layout_marginPercent="3%"
            android:gravity="left"
            android:password="true"
            android:hint="Ingrese una contraseña nueva"
            android:inputType="text"
            android:textSize="@dimen/title_normal_textSize" />

        <EditText
            android:layout_below="@+id/etPassword1"
            android:id="@+id/etPassword2"
            style="@style/styleEditTextVISA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:layout_marginPercent="3%"
            android:gravity="left"
            android:password="true"
            android:hint="Repita su contraseña"
            android:inputType="text"
            android:textSize="@dimen/title_normal_textSize" />

        <TextView
            style="@style/styleButtonVISA"
            android:layout_alignParentBottom="true"
            android:id="@+id/tvNext"
            android:background="@drawable/background_blue_gray"
            app:layout_heightPercent="20%"
            android:text="Enviar" />

        </android.support.percent.PercentRelativeLayout>


</android.support.percent.PercentRelativeLayout>