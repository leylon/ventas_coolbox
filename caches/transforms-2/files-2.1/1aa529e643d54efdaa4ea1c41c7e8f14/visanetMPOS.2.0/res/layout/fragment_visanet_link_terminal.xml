<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/visanet_white"
    tools:context="pe.beyond.visanet.events.authorization.AuthorizationFragment">


    <pe.beyond.visanet.view.MPOSHeaderView
        android:id="@+id/viewHeader"
        android:layout_width="match_parent"
        app:layout_heightPercent="6%"
        app:titleVISANET="" />

    <TextView
        android:id="@+id/tvInitialDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_marginPercent="4%"
        android:gravity="center"
        android:lines="3"
        android:layout_below="@+id/viewHeader"
        android:text="Enlaza el PinPad Bluetooth a tu Smartphone o Tablet"
        android:textColor="@color/visanet_blue_titlebar"
        android:textSize="@dimen/title_big_textSize" />


    <TextView
        android:id="@+id/tvInitialIndicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text="Iniciando..."
        android:textColor="@color/visanet_blue_titlebar"
        android:textSize="@dimen/title_big_textSize" />

    <ImageView
        android:layout_centerInParent="true"
        android:id="@+id/ivInitialPinLogo"
        app:layout_widthPercent="50%"
        app:layout_heightPercent="50%"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:visibility="invisible"
        android:src="@drawable/icono_pin_ok" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_marginPercent="4%"
        android:gravity="center"
        android:lines="2"
        android:layout_below="@+id/ivInitialPinLogo"
        android:text="Pinpad Enlazado"
        android:visibility="gone"
        android:textColor="@color/visanet_blue_titlebar"
        android:textSize="@dimen/title_small_textSize" />

</android.support.percent.PercentRelativeLayout>