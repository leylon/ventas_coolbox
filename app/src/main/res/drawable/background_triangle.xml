<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="-50%"
            android:pivotY="90%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <size
                    android:width="40dp"
                    android:height="40dp" />
                <solid android:color="#FFFF" />
                <corners android:radius="4dp" />
            </shape>
        </rotate>
    </item>
</layer-list>